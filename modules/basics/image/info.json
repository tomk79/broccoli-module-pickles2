            },
            "target": {
                "fieldType":"input",
                "type":"select",
                "label":"ターゲットウィンドウ",
                "options":[
                    {"value":"", "label":"デフォルト"},
                    {"value":"_blank", "label":"新規ウィンドウ (_blank)"}
